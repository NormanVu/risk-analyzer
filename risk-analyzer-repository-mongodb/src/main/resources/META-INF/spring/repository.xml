<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	<!-- MongoDB Repository Implementation Configuration -->

	<context:property-placeholder
		location="classpath:META-INF/spring/repository.properties" />

	<bean id="mongo" class="com.mongodb.Mongo">
		<constructor-arg value="${mongodb.host}" />
		<constructor-arg value="${mongodb.port}" />
	</bean>

	<bean id="dbFactory"
		class="com.scirisk.riskanalyzer.repository.mongodb.DbFactoryBean">
		<property name="databaseName" value="${mongodb.databaseName}" />
		<property name="mongo" ref="mongo" />
	</bean>

	<bean
		class="com.scirisk.riskanalyzer.repository.mongodb.DistributionNetworkRepositoryMongoDbImpl">
		<constructor-arg ref="dbFactory" />
	</bean>

	<bean id="mongoTemplate"
		class="com.scirisk.riskanalyzer.repository.mongodb.MongoTemplate">
		<constructor-arg ref="dbFactory" />
	</bean>

	<bean
		class="com.scirisk.riskanalyzer.repository.mongodb.DistributionChannelRepositoryMongoDbImpl">
		<constructor-arg ref="mongoTemplate" />
	</bean>

	<bean
		class="com.scirisk.riskanalyzer.repository.mongodb.FacilityRepositoryMongoDbImpl">
		<constructor-arg ref="mongoTemplate" />
	</bean>

</beans>
