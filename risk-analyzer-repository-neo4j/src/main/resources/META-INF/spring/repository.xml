<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	<!-- Neo4j Repository Implementation Configuration -->

	<context:property-placeholder
		location="classpath:META-INF/spring/repository.properties" />

	<bean id="graphDatabaseService"
		class="com.scirisk.riskanalyzer.repository.neo4j.GraphDatabaseServiceFactoryBean">
		<property name="path" value="${neo4jdb.path}" />
	</bean>

	<bean
		class="com.scirisk.riskanalyzer.repository.neo4j.FacilityRepositoryNeo4jImpl">
		<constructor-arg ref="graphDatabaseService" />
	</bean>

	<bean
		class="com.scirisk.riskanalyzer.repository.neo4j.DistributionChannelRepositoryNeo4jImpl">
		<constructor-arg ref="graphDatabaseService" />
	</bean>

	<bean
		class="com.scirisk.riskanalyzer.repository.neo4j.DistributionNetworkRepositoryNeo4jImpl">
		<constructor-arg ref="graphDatabaseService" />

	</bean>

</beans>
