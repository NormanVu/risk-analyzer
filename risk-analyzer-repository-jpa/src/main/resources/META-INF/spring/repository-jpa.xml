<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- Java Persistence API Implementation Configuration -->

	<bean id="entityManagerFactory"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
	</bean>

	<bean
		class="com.scirisk.riskanalyzer.repository.jpa.DistributionNetworkRepositoryJpaImpl">
		<constructor-arg ref="entityManagerFactory" />
	</bean>

	<bean
		class="com.scirisk.riskanalyzer.repository.jpa.FacilityRepositoryJpaImpl">
		<constructor-arg ref="entityManagerFactory" />
	</bean>

	<bean
		class="com.scirisk.riskanalyzer.repository.jpa.DistributionChannelRepositoryJpaImpl">
		<constructor-arg ref="entityManagerFactory" />
	</bean>

</beans>
